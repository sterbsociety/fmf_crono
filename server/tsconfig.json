{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["ESNEXT", "DOM", "ES2018.Promise"],
    "allowJs": true,
    "declaration": false,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
